#!/usr/bin/env node

/**
 * Module dependencies.
 */

// CLI
var server = require('../lib').createServer(process.argv);

// start the server
server.listen(server.program.port, function () {
  console.log('\033[90mserving \033[36m%s\033[90m on port \033[96m%d\033[0m', server.path, server.program.port);
});
